<syncfusion:ChromelessWindow
    x:Class=" syncfusion.ganttdemos.wpf.StatisticsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.ganttdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="532"
    Height="560"
    Background="White"
    Foreground="Black">

    <syncfusion:ChromelessWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.ganttdemos.wpf;component/Data/NodeStyle.xaml" />
                <ResourceDictionary Source="/syncfusion.ganttdemos.wpf;component/Data/GanttStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </syncfusion:ChromelessWindow.Resources>

    <interact:Interaction.Behaviors>
        <local:ProjectStatisticsBehavior />
    </interact:Interaction.Behaviors>

    <Border
        Margin="5"
        Background="GhostWhite"
        BorderBrush="Black"
        BorderThickness="0.75">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="headerText"
                Height="Auto"
                Margin="5,5,5,10"
                FontFamily="Verdana"
                FontWeight="Bold"
                TextWrapping="WrapWithOverflow" />
            <Border
                Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="0,0.25,0,0">
                <syncfusion:GridControl
                    x:Name="Grid"
                    HorizontalAlignment="Center"
                    Width="530"
                    AllowDragColumns="False"
                    AllowDragDrop="False"
                    SnapsToDevicePixels="True" />
            </Border>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <chart:SfChart
                    x:Name="piechart"
                    Grid.Row="0"
                    Grid.Column="0">
                    <chart:SfChart.Header>
                        <TextBlock
                            Margin="2"
                            FontFamily="Verdana"
                            FontWeight="Bold">
                            Duration Statistics
                        </TextBlock>
                    </chart:SfChart.Header>
                    <chart:DoughnutSeries
                        Name="Series1"
                        ExplodeAll="True"
                        ExplodeRadius="1"
                        ItemsSource="{Binding DurationExpenditure}"
                        XBindingPath="Name"
                        YBindingPath="Amount">
                        <chart:DoughnutSeries.AdornmentsInfo>
                            <chart:ChartAdornmentInfo
                                x:Name="Adornments"
                                LabelTemplate="{StaticResource LabelsTemplate}"
                                SegmentLabelContent="LabelContentPath"
                                ShowConnectorLine="True" />
                        </chart:DoughnutSeries.AdornmentsInfo>
                    </chart:DoughnutSeries>
                </chart:SfChart>


                <chart:SfChart
                    x:Name="piechart2"
                    Grid.Row="0"
                    Grid.Column="1">
                    <chart:SfChart.Header>
                        <TextBlock
                            Margin="2"
                            FontFamily="Verdana"
                            FontWeight="Bold">
                            Cost Statistics
                        </TextBlock>
                    </chart:SfChart.Header>
                    <chart:DoughnutSeries
                        Name="Series2"
                        ExplodeAll="True"
                        ExplodeRadius="1"
                        ItemsSource="{Binding CostExpenditure}"
                        XBindingPath="Name"
                        YBindingPath="Amount">
                        <chart:DoughnutSeries.AdornmentsInfo>
                            <chart:ChartAdornmentInfo
                                x:Name="Adornment"
                                LabelTemplate="{StaticResource LabelsTemplate}"
                                SegmentLabelContent="LabelContentPath"
                                ShowConnectorLine="True" />
                        </chart:DoughnutSeries.AdornmentsInfo>
                    </chart:DoughnutSeries>
                </chart:SfChart>
            </Grid>
            <Button
                Grid.Row="4"
                Width="70"
                Height="22"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Close"
                IsCancel="True" />
        </Grid>
    </Border>
</syncfusion:ChromelessWindow>
