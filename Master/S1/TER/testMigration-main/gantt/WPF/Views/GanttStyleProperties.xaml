<democommon:DemoControl
    x:Class="syncfusion.ganttdemos.wpf.GanttStyleProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.ganttdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto"
    Background="White"
    Foreground="Black">

    <!--  Window DataContext Information  -->
    <democommon:DemoControl.DataContext>
        <local:GanttStylePropertiesViewModel />
    </democommon:DemoControl.DataContext>

    <interact:Interaction.Behaviors>
        <local:CurrentDateLineStyleChangeBehavior />
    </interact:Interaction.Behaviors>

    <!--  Gantt Control information  -->
    <syncfusion:GanttControl
        x:Name="Gantt"
        ConnectorStroke="{Binding ElementName=connectorStroke, Path=Brush}"
        GridHeaderBackground="{Binding ElementName=ClrGridHeaderBackground, Path=Brush}"
        GridHeaderForeground="{Binding ElementName=ClrGridHeaderForeground, Path=Brush}"
        ItemsSource="{Binding TaskCollection}"
        NonWorkingHoursBackground="{Binding ElementName=ClrChartBackground, Path=Brush, Mode=TwoWay}"
        ProgressIndicatorBackground="{Binding ElementName=ClrProgressBar, Path=Brush, Mode=TwoWay}"
        ScheduleBackground="{Binding ElementName=ClrScheduleBackground, Path=Brush, Mode=TwoWay}"
        ScheduleBorderBrush="{Binding ElementName=ClrScheduleBorder, Path=Brush, Mode=TwoWay}"
        ScheduleForeground="{Binding ElementName=ClrScheduleForeground, Path=Brush, Mode=TwoWay}"
        ShowChartLines="{Binding ElementName=gridlineCB, Path=IsChecked, Mode=TwoWay}"
        ShowNonWorkingHoursBackground="{Binding ElementName=visibleCB, Path=IsChecked, Mode=TwoWay}"
        TaskNodeBackground="{Binding ElementName=ClrTaskNodeBackground, Path=Brush}"
        UseAutoUpdateHierarchy="False">
        <syncfusion:GanttControl.TaskAttributeMapping>
            <syncfusion:TaskAttributeMapping
                ChildMapping="ChildTask"
                DurationMapping="Duration"
                FinishDateMapping="EndDate"
                PredecessorMapping="Predecessor"
                ProgressMapping="Complete"
                ResourceInfoMapping="Resource"
                StartDateMapping="StDate"
                TaskIdMapping="Id"
                TaskNameMapping="Name" />
        </syncfusion:GanttControl.TaskAttributeMapping>
    </syncfusion:GanttControl>

    <democommon:DemoControl.Options>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>

                <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        VerticalAlignment="Top"
                        FontWeight="Bold"
                        Foreground="#FF21374C"
                        Text="Properties:" />
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,3"
                        Header="Grid">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text="Header Background:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrGridHeaderBackground"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="#8A85EC" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text="Header Foreground:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrGridHeaderForeground"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="White"
                                BrushMode="Solid" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,0,0,3"
                        Header="Schedule">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text=" Background:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrScheduleBackground"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="5,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="#8A85EC"
                                BrushMode="Solid" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text=" Foreground:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrScheduleForeground"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="5,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="White"
                                BrushMode="Solid" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text=" Border:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrScheduleBorder"
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="auto"
                                Height="auto"
                                Margin="5,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="White"
                                BrushMode="Solid" />
                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="10,0,0,3"
                        Header="Chart">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text="Task Node Background:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrTaskNodeBackground"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="#CEED6B"
                                BrushMode="Solid" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text="Connector Stroke:" />
                            <syncfusion:ColorPicker
                                x:Name="connectorStroke"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="#000000"
                                BrushMode="Solid" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text="Non Working Hours: " />
                            <syncfusion:ColorPicker
                                x:Name="ClrChartBackground"
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="#EBEDEE"
                                BrushMode="Solid" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Foreground="#FF21374C"
                                Text="Progress Indicator:" />
                            <syncfusion:ColorPicker
                                x:Name="ClrProgressBar"
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Brush="Black"
                                BrushMode="Solid" />

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                VerticalAlignment="Center"
                                Text="Show Non Working Hours" />
                            <CheckBox
                                x:Name="visibleCB"
                                Grid.Row="4"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                VerticalAlignment="Center"
                                IsChecked="True" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                VerticalAlignment="Center"
                                Text="Show Chart Line" />
                            <CheckBox
                                x:Name="gridlineCB"
                                Grid.Row="5"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                VerticalAlignment="Center"
                                IsChecked="True" />
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                Text="Current DateLine Style" />
                            <ComboBox
                                x:Name="CurrentDateLineCB"
                                Grid.Row="6"
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                Margin="5,10,0,0"
                                SelectedIndex="1">
                                <ComboBoxItem>Default</ComboBoxItem>
                                <ComboBoxItem>Dashed Lines</ComboBoxItem>
                                <ComboBoxItem>Dotted Lines</ComboBoxItem>
                                <ComboBoxItem>Dashed With Dotted Lines</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </democommon:DemoControl.Options>
</democommon:DemoControl>