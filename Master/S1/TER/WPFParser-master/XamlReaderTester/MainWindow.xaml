<Window x:Class="XamlReaderTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlReaderTester" 
        xmlns:viewmodels="clr-namespace:XamlReaderTester.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewmodels:MainWindowViewModel}"
        Title="XAML ParserTester" Height="450" Width="800" WindowStartupLocation="CenterScreen" 
        >
    <Grid>
        <Menu HorizontalAlignment = "Stretch" VerticalAlignment = "Top" >
            <MenuItem Header = "File">
                <MenuItem Header = "Open..." Command="{Binding CommandFileOpen}" HorizontalAlignment = "Left" Width = "140" />

                
                <Separator HorizontalAlignment = "Left" Width = "140"/>

                <MenuItem Header = "Exit" HorizontalAlignment = "Left" Width = "140" Click="MenuItemExit_Click" />

            </MenuItem>
        </Menu>
        <!--<TextBlock>ABC</TextBlock>-->
</Grid>
</Window>
