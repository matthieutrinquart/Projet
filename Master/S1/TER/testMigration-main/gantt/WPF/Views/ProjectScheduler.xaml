<democommon:DemoControl
    x:Class="syncfusion.ganttdemos.wpf.ProjectScheduler"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:interact="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:syncfusion.ganttdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto"
    Background="White"
    Foreground="Black">

    <interact:Interaction.Behaviors>
        <local:ProjectSchedulerInitialSetupBehavior />
    </interact:Interaction.Behaviors>

    <democommon:DemoControl.Resources>
        <LinearGradientBrush x:Key="gridViewbackground" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0.08" Color="#FF119EDA" />
            <GradientStop Offset="0.479" Color="#FF2C9ECE" />
            <GradientStop Offset="0.973" Color="#FF119EDA" />
        </LinearGradientBrush>
    </democommon:DemoControl.Resources>

    <Border x:Name="border" Grid.Column="0">
        <syncfusion:GanttControl x:Name="Gantt" ShowAddNewColumn="False" />
    </Border>

    <democommon:DemoControl.Options>
        <StackPanel Grid.Column="1" Margin="0,30">
            <StackPanel>
                <TextBlock Margin="10" Text="Task Options" />
                <Button
                    x:Name="NewTask"
                    Width="100"
                    Margin="5,10,5,0"
                    Content="Add" />

                <Button
                    x:Name="InsertTask"
                    Width="100"
                    Margin="5,5,5,0"
                    Content="Insert" />

                <Button
                    x:Name="Indent"
                    Width="100"
                    Margin="5,5,5,0"
                    Content="Indent" />
                <Button
                    x:Name="Outdent"
                    Width="100"
                    Margin="5,5,5,0"
                    Content="Outdent" />


                <Button
                    x:Name="DeleteTask"
                    Width="100"
                    Margin="5,5,5,0"
                    Content="Delete" />
                <Button
                    x:Name="DeleteALL"
                    Width="100"
                    Margin="5,5,5,5"
                    Content="Clear All" />

            </StackPanel>

            <TextBlock Margin="10" Text="File Options" />
            <StackPanel>
                <Button
                    x:Name="Load"
                    Width="100"
                    Margin="5,10,5,0"
                    Content="Load" />


                <Button
                    x:Name="Save"
                    Width="100"
                    Margin="5,5,5,0"
                    Content="Save" />


                <Button
                    x:Name="SaveAs"
                    Width="100"
                    Margin="5,5,5,5"
                    Content="Save As" />


            </StackPanel>
        </StackPanel>
    </democommon:DemoControl.Options>

</democommon:DemoControl>
