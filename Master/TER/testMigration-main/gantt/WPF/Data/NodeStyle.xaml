<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.Windows.Controls.Gantt.Chart;assembly=Syncfusion.Gantt.Wpf"
    xmlns:gantt="http://schemas.syncfusion.com/wpf">
    <Style x:Key="TaskNode" TargetType="{x:Type chart:GanttNode}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type chart:GanttNode}">
                    <Border
                        Name="PART_Border"
                        Height="18"
                        VerticalAlignment="Center"
                        BorderBrush="#FF4D4D4D"
                        BorderThickness="0.5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Offset="0" Color="#FFF6F6F6" />
                                <GradientStop Offset="1" Color="#FFC5C5C5" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{TemplateBinding DataContext}" ContentTemplate="{TemplateBinding ToolTipTemplate}" />
                            </ToolTipService.ToolTip>
                            <Thumb
                                x:Name="PART_DragDropThumb"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Cursor="SizeAll">
                                <Thumb.Template>
                                    <ControlTemplate>
                                        <Border Background="Transparent" />
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>

                            <Border
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Width="{TemplateBinding ProgressWidth}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <Grid Width="{TemplateBinding ProgressWidth}" HorizontalAlignment="Stretch">
                                    <Rectangle
                                        Height="12"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Stroke="Transparent">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0" Color="DeepPink" />
                                                <GradientStop Offset="1" Color="DeepPink" />
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Thumb
                                        x:Name="PART_ProgressThumb"
                                        HorizontalAlignment="Right"
                                        Cursor="SizeWE">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="Transparent" BorderBrush="Transparent">
                                                    <Rectangle
                                                        Width="5"
                                                        Height="2"
                                                        Fill="Transparent" />
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Grid>
                            </Border>

                            <Thumb
                                x:Name="PART_RightThumb"
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                Cursor="ScrollE">
                                <Thumb.Template>
                                    <ControlTemplate>
                                        <Rectangle
                                            Width="6"
                                            Height="20"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Stroke="Transparent">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <GradientStop Offset="0" Color="DeepPink" />
                                                    <GradientStop Offset="1" Color="DeepPink" />
                                                </LinearGradientBrush>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>

                            <Thumb
                                x:Name="PART_LeftThumb"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Cursor="ScrollW">
                                <Thumb.Template>
                                    <ControlTemplate>
                                        <Border
                                            Width="4"
                                            Height="20"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0" />
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MileStone" TargetType="chart:MileStone">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="chart:MileStone">
                    <Grid>
                        <Path
                            Width="18"
                            Height="19"
                            Margin="0,0,0,0"
                            Data="M1540.22,2082.07L1546.95,2102.78 1568.73,2102.78 1551.11,2115.58 1557.84,2136.29 1540.22,2123.49 1522.6,2136.29 1529.33,2115.58 1511.71,2102.78 1533.49,2102.78 1540.22,2082.07z"
                            Stretch="Uniform">
                            <Path.Fill>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Offset="0" Color="DeepPink" />
                                    <GradientStop Offset="1" Color="DeepPink" />
                                </LinearGradientBrush>
                            </Path.Fill>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="HeaderNode" TargetType="chart:HeaderNode">
        <Setter Property="MaxHeight" Value="24" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="chart:HeaderNode">
                    <Border
                        Name="PART_HeaderBorder"
                        BorderThickness="0"
                        Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <Grid Width="{TemplateBinding Width}" VerticalAlignment="Center">

                            <ToolTipService.ToolTip>
                                <ToolTip Content="{TemplateBinding DataContext}" ContentTemplate="{TemplateBinding ToolTipTemplate}" />
                            </ToolTipService.ToolTip>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                Grid.Column="1"
                                Width="{TemplateBinding Width}"
                                Height="6.4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Fill="#FF414141" />

                            <Path
                                Width="10.135"
                                Height="11.435"
                                Margin="-5.068,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Data="M0.3,0.3 L9.834909,0.30036073 9.8351226,5.9832297 5.0695471,10.734966 0.32096295,5.9863821 z"
                                Fill="#FF414141"
                                Stretch="Fill"
                                Stroke="#FF414141" />
                            <Path
                                Width="10.135"
                                Height="11.435"
                                Margin="0,0,-5.068,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Data="M0.3,0.3 L9.834909,0.30036073 9.8351226,5.9832297 5.0695471,10.734966 0.32096295,5.9863821 z"
                                Fill="#FF414141"
                                Stretch="Fill"
                                Stroke="#FF414141" />

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>