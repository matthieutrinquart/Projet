<Page x:Class="Tic_Tac_Toe.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tic_Tac_Toe.Pages"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF" 
      xmlns:vm="clr-namespace:Tic_Tac_Toe.ViewModels"
      fw:AcrylicWindow.Enabled="True"
      mc:Ignorable="d" 
      d:DesignHeight="500" 
      d:DesignWidth="400"
      Title="SettingsPage">
    
    <Page.DataContext>
        <vm:MainViewModel/>
    </Page.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button IsHitTestVisible="{Binding Path=CanSelect}" 
                Padding="0,0,0,7"
               Style="{DynamicResource ButtonRoundRevealStyle}"
               Background="{DynamicResource SystemAltHighColorBrush}"
               fw:RevealElement.MouseOverBackground="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}"
               Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                Margin="0" 
                Click="Button_Click" 
                Grid.Column="2" 
                Grid.Row="12">
            <Button.Content>
                <Viewbox>
                    <TextBlock Text="Play!"/>
                </Viewbox>
            </Button.Content>
        </Button>

        <RadioButton Grid.Column="2" 
                     Grid.Row="4" 
                     Command="{Binding Settings.ChangeGameMode}" 
                     Background="{DynamicResource SystemChromeWhiteColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     x:Name="UserButton" 
                     GroupName="GameMode" 
                     VerticalContentAlignment="Center" 
                     Checked="UserButton_Checked">
            <RadioButton.Content>
                <Viewbox>
                    <TextBlock Text="User vs User"/>
                </Viewbox>
            </RadioButton.Content>
        </RadioButton>
        
        <RadioButton Grid.Column="2" 
                     Grid.Row="5" 
                     Command="{Binding Settings.ChangeGameMode}"
                     Background="{DynamicResource SystemChromeWhiteColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     x:Name="BotButton" GroupName="GameMode" 
                     VerticalContentAlignment="Center" 
                     Checked="BotButton_Checked" >
            <RadioButton.Content>
                <Viewbox>
                    <TextBlock Text="User vs Bot"/>
                </Viewbox>
            </RadioButton.Content>
        </RadioButton>
        
        <RadioButton Visibility="Collapsed" 
                     Grid.Column="2" 
                     Grid.Row="6" 
                     Command="{Binding Settings.ChangeGameMode}" 
                     Background="{DynamicResource SystemChromeWhiteColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     x:Name="InternetButton" 
                     GroupName="GameMode" 
                     VerticalContentAlignment="Center" 
                     Checked="InternetButton_Checked" >
            <RadioButton.Content>
                <Viewbox>
                    <TextBlock Text="Internet"/>
                </Viewbox>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Visibility="Hidden" 
                     Grid.Column="2" 
                     Grid.Row="8" 
                     Command="{Binding Settings.ChangeBotDifficulty}" 
                     Background="{DynamicResource SystemChromeWhiteColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     x:Name="EasyButton" 
                     GroupName="Difficulty" 
                     VerticalContentAlignment="Center" 
                     Checked="EasyButton_Checked">
            <RadioButton.Content>
                <Viewbox>
                    <TextBlock Text="Easy"/>
                </Viewbox>
            </RadioButton.Content>
        </RadioButton>
        
        <RadioButton Visibility="Hidden" 
                     Grid.Column="2" 
                     Grid.Row="9" 
                     Command="{Binding Settings.ChangeBotDifficulty}" 
                     Background="{DynamicResource SystemChromeWhiteColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     x:Name="MediumButton" 
                     GroupName="Difficulty" 
                     VerticalContentAlignment="Center" 
                     Checked="MediumButton_Checked">
            <RadioButton.Content>
                <Viewbox>
                    <TextBlock Text="Medium"/>
                </Viewbox>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Visibility="Hidden" 
                     Grid.Column="2" 
                     Grid.Row="10" 
                     Command="{Binding Settings.ChangeBotDifficulty}" 
                     Background="{DynamicResource SystemChromeWhiteColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     x:Name="ImpossibleButton" 
                     GroupName="Difficulty" 
                     VerticalContentAlignment="Center" 
                     Checked="ImpossibleButton_Checked">
            <RadioButton.Content>
                    <Viewbox>
                        <TextBlock Text="Impossible"/>
                    </Viewbox>
                </RadioButton.Content>
            </RadioButton>

            <Viewbox Margin="0" 
                     Grid.IsSharedSizeScope="True" 
                     Grid.Column="2" 
                     Grid.Row="2" 
                     Grid.RowSpan="2">
                
            <TextBox x:Name="Nrows" 
                     Style="{DynamicResource TextBoxRevealStyle}" 
                     Background="{DynamicResource SystemAltHighColorBrush}" 
                     Foreground="{DynamicResource SystemBaseHighColorBrush}" 
                     Text="3" 
                     PreviewTextInput="NumberValidationTextBox" 
                     TextWrapping="Wrap" 
                     Margin="0" 
                     Grid.IsSharedSizeScope="True" 
                     HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center" 
                     Width="148"/>
        </Viewbox>

        <Label Foreground="{DynamicResource SystemBaseHighColorBrush}" 
               Margin="0" 
               VerticalContentAlignment="Center" 
               HorizontalContentAlignment="Center" 
               Grid.Column="2"  
               Grid.Row="1">
            <Label.Content>
                <Viewbox>
                    <TextBlock Text="Specify board size"/>
                </Viewbox>
            </Label.Content>
        </Label>
    </Grid>
</Page>
