<UserControl x:Class="Main.Views.SplashScreenWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             Title="copyrightText"
             mc:Ignorable="d"
             d:DesignHeight="240" d:DesignWidth="440">
    <Grid>
        <Border BorderThickness="3" BorderBrush="MediumBlue">
            <dx:DXImage Source="/Images/My-Logo.jpg" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <!--
            <TextBlock Foreground="DarkGray" Name="copyrightText" Text="Sample" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15,45,45,65"/>
            -->            
        </Border>
        <TextBlock 
            Foreground="DarkGray" 
            Name="copyrightText" 
            Text    = "Sample" 
            VerticalAlignment="Bottom" 
            HorizontalAlignment="Left" 
            Margin="15,45,45,65"/>
    </Grid>
</UserControl>
    